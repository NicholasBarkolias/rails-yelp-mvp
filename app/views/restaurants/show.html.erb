<h1><%= @restaurant.name %></h1>
<h2><%= @restaurant.address %></h2>
<h2><%= @restaurant.phone_number %></h2>


<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item">Review: <%= review.content %></li>
    <li class="list-group-item">Rating: <%= review.rating %></li>
    <br>
  <% end %>
</ul>

<%= link_to 'Leave a review', new_restaurant_review_path(@restaurant) %>


<%= link_to 'Home', restaurants_path %>
